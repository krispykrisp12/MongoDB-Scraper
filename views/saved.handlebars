<h1>Saved Articles</h1>
<div class="container">
    {{#each savedArticles}}
    <div class="row">
        <div class="col-md-4">
            <h2>{{this.title}}</h2>
            <br />
            <a href={{this.link}}>{{this.link}}</a>
        </div>
        <div class="col-md-4">
            <div class="btn btn-primary" id="addNote" data-id="{{this._id}}">Add Note</div>
            <br />
            <div class="btn btn-success" id="delete" data-id="{{this._id}}">Delete</div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <button class="btn showNote">Show Notes</button>
            </div>
            {{#each this.note}}
            <div class="row">
                <div class="showNoteArea">
                    <h2>{{this.title}}</h2>
                    <p>{{this.body}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/each}}
</div>